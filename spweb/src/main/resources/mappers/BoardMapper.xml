<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.maruhan.service.BoardService">
	<insert id="create">
		insert into tbl_board(BNO,TITLE,CONTEXT,WRITER,REGDATE)
		values(seq_board.nextval,#{title},#{content},#{writer},sysdate)
	</insert>
	
	<select id="read" resultType="org.maruhan.board.BoardDTO">
		select * from tbl_board where bno=#{bno}
	</select>
	
	<delete id="delete">
		delete from tbl_board where bno=#{bno}
	</delete>
	
	<update id="update">
		update tbl_board set
		title = #{title},
		context = #{content},
		updatedate = sysdate
		where bno = #{bno}
	</update>

	<select id="list">
		select * from tbl_board
	</select>

</mapper>